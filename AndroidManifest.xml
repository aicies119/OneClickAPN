<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="kr.PLAZMADev.KORAPN.free"
      android:versionName="1.5.1" android:versionCode="9">
    <uses-permission android:name="android.permission.WRITE_APN_SETTINGS"/>
    <uses-sdk android:minSdkVersion="7" />
    <uses-sdk android:maxSdkVersion="10" />

    <application android:icon="@drawable/korapnicon" android:label="@string/app_name">
        <activity android:name=".KOREAAPNActivity"
            	  android:theme="@android:style/Theme.Light"
                  android:configChanges="keyboardHidden">
        </activity>
        <activity android:name="com.google.ads.AdActivity"
        		  android:configChanges="keyboard|keyboardHidden|orientation"/>
		<activity android:name=".SplashActivity"
          		  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
				  <intent-filter>
                	<action android:name="android.intent.action.MAIN" />
                	<category android:name="android.intent.category.LAUNCHER" />
            	  </intent-filter>
		</activity>
		<activity android:name=".APNSettingActivity"
		    	  android:theme="@android:style/Theme.Light.NoTitleBar"
				  android:configChanges="orientation|keyboardHidden"/>
		<activity android:name="InfoActivity"
		    	  android:theme="@android:style/Theme.Light.NoTitleBar"/>
		<activity android:name="Errors"/>
				  
    </application>
    <uses-permission android:name="android.permission.INTENT"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>